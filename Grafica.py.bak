import os
import pandas as pd
import matplotlib.pyplot as plt
from config import data_path


def main():
	csv_file = data_path("bitcoin_precios.csv")
	if not os.path.exists(csv_file):
		print(f"Data file not found: {csv_file}. Run `recolector.py` first.")
		return

	df = pd.read_csv(csv_file, names=["Fecha", "Precio"])
	df["Fecha"] = pd.to_datetime(df["Fecha"])

	plt.figure(figsize=(10, 5))
	plt.plot(df["Fecha"], df["Precio"], marker='o', linestyle='-', color='orange')
	plt.title("Precio de Bitcoin en Bitso")
	plt.xlabel("Fecha")
	plt.ylabel("Precio en MXN")
	plt.grid(True)
	plt.tight_layout()
	plt.show()


if __name__ == '__main__':
	main()